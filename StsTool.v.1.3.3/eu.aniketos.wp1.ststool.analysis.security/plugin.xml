<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
<extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="eu.aniketos.wp1.ststool.analysis.security.propertytester.SupportedOSTester"
            id="eu.aniketos.wp1.ststool.analysis.security.propertyTester"
            namespace="eu.aniketos.wp1.ststool.analysis.security.tester"
            properties="isSupportedOS"
            type="java.lang.Object">
      </propertyTester>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="eu.aniketos.wp1.ststool.analysis.security.menu.expression">
         <and>
            <test
                  forcePluginActivation="true"
                  property="eu.aniketos.wp1.ststool.analysis.security.tester.isSupportedOS">
            </test>
            <with
                  variable="activeEditorId">
               <equals
                     value="eu.aniketos.wp1.ststool.diagram.part.StsToolDiagramEditorID">
               </equals>
            </with>
         </and>
      </definition>
   </extension>
<extension
         point="org.eclipse.ui.commands">
      <command
            id="securityanalysis"
            name="Launch Security Analysis">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:analysis?after=consitencyanalysis">
         <command
               commandId="securityanalysis"
               icon="resources/icons/securityAnalysisIcon.png"
               style="push"
               tooltip="Run Security Analysis for the current Diagram">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="eu.aniketos.wp1.ststool.analysis.security.menu.expression">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="menu:analysis">
         <command
               commandId="securityanalysis"
               icon="resources/icons/securityAnalysisIcon.png"
               style="push"
               tooltip="Run Security Analysis for the current Diagram">
               <visibleWhen
                  checkEnabled="false">
                  <reference
                        definitionId="eu.aniketos.wp1.ststool.analysis.security.menu.expression">
                  </reference>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="eu.aniketos.wp1.ststool.analysis.security.handlers.SecurityAnalysisHandler"
            commandId="securityanalysis">
      </handler>
   </extension>
</plugin>
